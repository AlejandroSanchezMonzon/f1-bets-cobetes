---
import ResultsForm from "@/components/ResultsForm.astro";
import QualyForm from "@/components/QualyForm.astro";
---

<div class="w-[90vw] lg:w-[75vw] mx-auto">
  <div class="grid grid-cols-1 gap-8">
    <section
      class="bg-gradient-to-r from-secondary via-footer to-accent shadow-lg p-6 rounded-lg"
    >
      <h2 class="text-2xl font-wide mb-4">Registro de nuevos resultados</h2>
      <ResultsForm />
    </section>
    <section
      class="bg-gradient-to-r from-secondary via-footer to-accent shadow-lg p-6 rounded-lg"
    >
      <h2 class="text-2xl font-wide mb-4">Registro de nueva qualy</h2>
      <QualyForm />
    </section>
  </div>
</div>
