---
import NextRaceCountdown from "@/components/NextRaceCountdown.jsx";
import NextBetDetails from "@/components/NextBetDetails.jsx";
import RankingOverview from "@/components/RankingOverview.astro";
---

<div class="grid grid-cols-1 md:grid-cols-2 gap-4 w-[90vw] md:w-[75vw] mx-auto">
  <div class="col-span-1 md:col-span-2">
    <NextRaceCountdown client:load />
  </div>

  <div class="order-2 md:col-start-1 md:row-start-2">
    <NextBetDetails client:load/>
  </div>

  <div class="order-3 md:col-start-2 md:row-start-2">
    <RankingOverview />
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const token = sessionStorage.getItem("token");
    if (!token) {
      window.location.href = "/login";
      return;
    }
  });
</script>
