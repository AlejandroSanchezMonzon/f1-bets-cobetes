---
import NextRaceCountdown from "@/components/NextRaceCountdown.jsx";
import NextBetDetails from "@/components/NextBetDetails.jsx";
import RankingOverview from "@/components/RankingOverview.jsx";
---

<div class="grid grid-cols-1 lg:grid-cols-2 gap-4 w-[90vw] lg:w-[75vw] mx-auto">
  <div class="col-span-1 lg:col-span-2">
    <NextRaceCountdown client:load />
  </div>

  <div class="order-2 lg:col-start-1 lg:row-start-2">
    <NextBetDetails client:load />
  </div>

  <div class="order-3 lg:col-start-2 lg:row-start-2">
    <RankingOverview client:load />
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const token = sessionStorage.getItem("token");
    if (!token) {
      window.location.href = "/login";
      return;
    }
  });
</script>
